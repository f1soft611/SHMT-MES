<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

	<!-- Spring Boot 프로퍼티 참조 -->
	<property name="LOG_PATH" value="${logging.file.path}"/>
	<property name="LOG_FILE_NAME" value="${logging.file.name}"/>
	<property name="LOG_PATTERN"
			  value="%-5level %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%logger{0}:%line] - %msg%n"/>
	<property name="LOG_MAX_FILE_SIZE" value="${logging.rollingpolicy.maxFileSize}"/>
	<property name="LOG_MAX_HISTORY" value="${logging.rollingpolicy.maxHistory}"/>
	<property name="LOG_LEVEL" value="${logging.root.level}"/>

	<!-- 콘솔 로그 -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<!-- 파일 로그 -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>

		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>${LOG_MAX_FILE_SIZE}</maxFileSize>
			<maxHistory>${LOG_MAX_HISTORY}</maxHistory>
		</rollingPolicy>
	</appender>

	<!-- 로거별 레벨 설정 -->
	<logger name="egovframework" level="${logging.level.egovframework}"/>
	<logger name="jdbc.sqlonly" level="${logging.level.jdbc.sqlonly}"/>
	<logger name="jdbc.sqltiming" level="${logging.level.jdbc.sqltiming}"/>
	<logger name="jdbc.resultsettable" level="${logging.level.jdbc.resultsettable}"/>
	<logger name="jdbc.audit" level="${logging.level.jdbc.audit}"/>
	<logger name="jdbc.resultset" level="${logging.level.jdbc.resultset}"/>
	<logger name="jdbc.connection" level="${logging.level.jdbc.connection}"/>

	<!-- 루트 로거 -->
	<root level="${LOG_LEVEL}">
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="FILE"/>
	</root>

</configuration>
